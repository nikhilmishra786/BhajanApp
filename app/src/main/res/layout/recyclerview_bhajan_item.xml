<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_300"
    android:layout_marginTop="@dimen/margin_20"
    app:strokeColor="@color/bhajan_title6"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvBhajanTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bhajan_title2"
            android:gravity="center_vertical|center_horizontal"
            android:padding="@dimen/margin_10"
            android:textColor="@color/white"
            android:textSize="@dimen/text_32"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Bhajan Name" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBhajanThumbnail"
            android:layout_width="@dimen/margin_200"
            android:layout_height="@dimen/margin_200"
            android:layout_marginStart="@dimen/margin_10"
            android:padding="@dimen/margin_10"
            android:src="@drawable/bhajan_seva_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvBhajanTitle" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/margin_10"
            tools:text="Song Name: "
            android:textSize="@dimen/text_20"
            app:layout_constraintStart_toEndOf="@id/ivBhajanThumbnail"
            app:layout_constraintTop_toBottomOf="@id/tvBhajanTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>